<time class="dt-published" datetime="{{ definedDate | toIsoString }}">
  <!-- TODO: less verbose -->

  {% if page.lang == "de" %}
  {{
    definedDate | formatDateDE('D. MMMM YYYY')
  }}

  {% elif page.lang == "es" %}
  {{
    definedDate | formatDateES('D MMMM, YYYY')
  }}

  {% else %}
  <!-- default: EN -->
  {{
    definedDate | formatDate('MMMM D, YYYY')
  }}
  {% endif %}
</time>
