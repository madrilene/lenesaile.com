---
layout: base
theme: cinnabar
headerClass: row-1
mainClass: row-1
sparkle: true
---

<!-- DEBUG: {{ permalink }} -->

<header class="overflow-hidden section full" data-color="cinnabar">
  <div class="section__inner">
    <div class="prose flow region wrapper" style="--region-space-top: var(--space-header-distance)">
      <h1 class="fade-in-bottom">{{ title }}</h1>
      <p>{{ lead }}</p>
    </div>
  </div>

  {% svg 'divider/pixels', null, 'seperator' %}
</header>

<article class="full region">
  <div class="prose wrapper flow">{{ content | safe }}</div>
  <div class="wrapper region">
    <div class="items-center feature sidebar flow ">
      <header class="flow mr-xs">
        <h2>{{ breakout.title }}</h2>
        <p>{{ breakout.intro }}</p>
      </header>
      {% image image %}
    </div>
  </div>
  <div class="prose full wrapper flow">
    <p class="prose">{{ finalWords | markdownFormat | safe }}</p>
  </div>

  <div class="prose full wrapper flow region">
    <header class="cluster">
      <h2>{{ faq.title }}</h2>
      <p class="text-step-0">{{ faq.abbr }}</p>
    </header>
    {{ faq.intro | markdownFormat | safe }}
    {% set itemList = faq.items %}
    {% set headingLevel = "h3" %}
    {% include 'partials/details.njk' %}
  </div>
</article>
